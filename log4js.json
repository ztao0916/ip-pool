{
  "appenders": {
    "access": {
      "type": "dateFile",
      "filename": "log/access.log",
      "pattern": "yyyy-MM-dd.log",
      "category": "https",
      "alwaysIncludePattern": true
    },
    "app": {
      "type": "file",
      "filename": "log/app.log",
      "pattern": "yyyy-MM-dd.log",
      "alwaysIncludePattern": true,
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "errorFile": {
      "type": "file",
      "filename": "log/errors.log",
      "pattern": "yyyy-MM-dd.log",
      "alwaysIncludePattern": true
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    }
  },
  "categories": {
    "default": { "appenders": ["app", "errors"], "level": "DEBUG" },
    "http": { "appenders": ["access"], "level": "DEBUG" }
  }
}
